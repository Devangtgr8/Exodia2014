<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      <% if ((current_page.data.title or title) rescue false) %>
        <%= (current_page.data.title or title) rescue nil %> | Exodia 2014
      <% else %>
        Exodia 2014
      <% end %>
    </title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag  "application" %>
  </head>
  <body class="<%= page_classes %>">

    <div class="off-canvas-wrap">
      <div class="inner-wrap">
        <a class="left-off-canvas-toggle menu-icon"><span></span></a>
        <aside class="left-off-canvas-menu">
          <ul class="off-canvas-list">
            <li><label>Exodia 2014</label></li>
            <li><%= link_to "Home", "/" %></li>
            <li><%= link_to "Events", "/events/" %></li>
            <li><%= link_to "Workshops", "/workshops/" %></li>
            <li><%= link_to "Attractions", "/attractions/" %></li>
            <li><%= link_to "Sponsors", "/sponsors/" %></li>
          </ul>
        </aside>

        <div class="actual-content">
          <%= yield %>
        </div>

        <a class="exit-off-canvas"></a>
      </div>
    </div>

  </body>
</html>
